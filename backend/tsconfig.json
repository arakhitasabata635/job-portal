{
  "compilerOptions": {
    // ğŸ“ Where your TypeScript source files live
    "rootDir": "./src",

    // ğŸ“¦ Where compiled JavaScript files will be generated
    "outDir": "./dist",

    // ğŸ“¤ Controls how import/export works in Node.js (ESM + CommonJS support)
    "module": "NodeNext",

    // ğŸ¯ JavaScript version to output (modern Node supports ES2020 well)
    "target": "ES2020",

    // ğŸ” How TypeScript resolves modules from node_modules (must match NodeNext)
    "moduleResolution": "NodeNext",

    // ğŸ§  Adds Node.js global types (process, __dirname, Buffer, fs, path, etc.)
    "types": ["node"],

    // ğŸ” Makes array/object access safer (forces undefined checks)
    "noUncheckedIndexedAccess": true,

    // ğŸ§© Optional means optional (prevents assigning undefined explicitly)
    "exactOptionalPropertyTypes": true,

    // ğŸ§± Enforces exact file name casing in imports (prevents Linux server bugs)
    "forceConsistentCasingInFileNames": true,

    // ğŸš¨ Enables all strict type-checking rules (catches bugs early)
    "strict": true,

    // âš ï¸ Warns when importing files that run code automatically (side effects)
    "noUncheckedSideEffectImports": true,

    // âš¡ Skips type checking inside node_modules for faster builds
    "skipLibCheck": true
  }
}
